  .text-center(class='w-1/2 sm_w-1/3 md_w-1/6')
    a.no-underline.text-black(href='#')
      i.fas.fa-bus-alt.text-5xl.text-orange
      h4.my-2 Расписание транспорта
  .text-center(class='w-1/2 sm_w-1/3 md_w-1/6')
    a.no-underline.text-black(href='#')
      i.far.fa-money-bill-alt.text-5xl.text-indigo
      h4.my-2 Банкоматы на карте
  .text-center(class='w-1/2 sm_w-1/3 md_w-1/6')
    a.no-underline.text-black(href='#')
      i.far.fa-calendar-alt.text-5xl.text-pink
      h4.my-2 Афиша
  .text-center(class='w-1/2 sm_w-1/3 md_w-1/6')
    a.no-underline.text-black(href='#')
      i.fas.fa-phone-square.text-5xl.text-teal
      h4.my-2 Коды городов
