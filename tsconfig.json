{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"]
    },
    "sourceMap": true
  },
  "plugins": [{ "name": "typescript-plugin-css-modules" }]
}
